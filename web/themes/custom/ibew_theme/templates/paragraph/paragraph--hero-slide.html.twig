{#
/**
 * @file
 * Default theme implementation for a 'Hero Slide' paragraph.
 */
#}
{% set image_url = file_url(content.field_hero_image[0]['#item'].entity.uri.value) %}

<li class="splide__slide h-full w-full relative">
  <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('{{ image_url }}');">
     <div class="absolute inset-0 bg-black/50 z-0"></div>
  </div>
  <div class="relative z-20 h-full flex flex-col justify-center items-center text-center px-4 pointer-events-none">
    <div class="pointer-events-auto"> {# Restore pointer events for links #}
      <h1 class="font-oswald text-6xl font-bold text-white mb-4 tracking-wider uppercase drop-shadow-lg">
        {{ content.field_hero_title[0] }}
      </h1>
      <p class="text-white text-xl mb-8 max-w-2xl mx-auto font-sans drop-shadow-md">
        {{ content.field_hero_subtitle[0] }}
      </p>
      
      {% if content.field_hero_links %}
        <div class="flex flex-wrap gap-4 justify-center">
          {% for key, item in content.field_hero_links %}
            {% if key|first != '#' %}
              {% set link_url = item['#url'] %}
              {% set link_title = item['#title'] %}
              
              {% set btn_class = 'ibew-btn-lg ibew-btn--gold' %}
              {% if loop.index == 2 %}{% set btn_class = 'ibew-btn-lg ibew-btn--blue' %}{% endif %}
              {% if loop.index == 3 %}{% set btn_class = 'ibew-btn-lg border-2 border-white text-white bg-transparent hover:bg-white/10 backdrop-blur-sm' %}{% endif %}
              
              <a href="{{ link_url }}" class="{{ btn_class }} gap-2 inline-flex items-center justify-center">
                  {{ link_title }}
              </a>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</li>
