{#
/**
 * @file
 * Theme implementation for 'Hero Overlay' block type.
 */
#}
{% set title = content.field_display_title|field_value %}
{% set description = content.field_hero_description|field_value %}

<h1 class="font-oswald text-6xl font-bold text-white mb-4 tracking-wider uppercase drop-shadow-lg">
  {{ title }}
</h1>

<p class="text-white text-xl mb-8 font-sans drop-shadow-md mx-auto" style="max-width: 650px;">
  {{ description }}
</p>

{% if content.field_hero_actions %}
  <div class="flex flex-wrap gap-4 justify-center">
    {{ content.field_hero_actions }}
  </div>
{% endif %}
