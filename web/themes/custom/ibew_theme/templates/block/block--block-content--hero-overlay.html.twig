{#
/**
 * @file
 * Theme implementation for 'Hero Overlay' block type.
 */
#}
{% set title = content.field_display_title|field_value %}
{% set description = content.field_hero_description|field_value %}

<div class="d-flex flex-column align-items-center justify-content-center text-center h-100 px-3">
  
  <h1 class="font-oswald fw-bold text-white mb-3 text-uppercase display-4 drop-shadow-lg" style="letter-spacing: 0.05em;">
    {{ title }}
  </h1>

  <p class="text-white fs-5 mb-5 font-sans drop-shadow-md mx-auto fw-light" style="max-width: 700px; opacity: 0.9;">
    {{ description }}
  </p>

  {% if content.field_hero_actions %}
    <div class="d-flex flex-wrap gap-3 justify-content-center">
      {{ content.field_hero_actions }}
    </div>
  {% endif %}

</div>
