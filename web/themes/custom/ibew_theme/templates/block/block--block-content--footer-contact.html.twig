{#
/**
 * @file
 * Theme override to display a 'Footer Contact' block.
 */
#}
{% if label %}
  <h4>{{ label }}</h4>
{% endif %}

{# Phone #}
{% if content.field_phone[0] %}
<div class="ibew-footer__contact-item">
  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-phone" aria-hidden="true"><path d="M13.832 16.568a1 1 0 0 0 1.213-.303l.355-.465A2 2 0 0 1 17 15h3a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2A18 18 0 0 1 2 4a2 2 0 0 1 2-2h3a2 2 0 0 1 2 2v3a2 2 0 0 1-.8 1.6l-.468.351a1 1 0 0 0-.292 1.233 14 14 0 0 0 6.392 6.384"></path></svg>
  <span>{{ content.field_phone[0]['#context'].value }}</span>
</div>
{% endif %}

{# Email #}
{% if content.field_email[0] %}
<div class="ibew-footer__contact-item">
  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-mail" aria-hidden="true"><path d="m22 7-8.991 5.727a2 2 0 0 1-2.009 0L2 7"></path><rect x="2" y="4" width="20" height="16" rx="2"></rect></svg>
  <a href="mailto:{{ content.field_email[0]['#context'].value }}" class="text-gray-400 hover:text-white">{{ content.field_email[0]['#context'].value }}</a>
</div>
{% endif %}

{# Address #}
{% if content.field_address[0] %}
<div class="ibew-footer__contact-item">
  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-map-pin mt-1 flex-shrink-0" aria-hidden="true"><path d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"></path><circle cx="12" cy="10" r="3"></circle></svg>
  <span>{{ content.field_address[0]['#context'].value|nl2br }}</span>
</div>
{% endif %}
