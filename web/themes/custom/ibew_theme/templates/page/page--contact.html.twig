{#
/**
 * @file
 * Contact page template with styled form and contact information.
 */
#}
<a id="main-content" tabindex="-1"></a>

<div class="ibew-page">
	{% include '@ibew_theme/includes/header.html.twig' %}

	{# --- HERO SECTION (Parallax) --- #}
	<section
		class="ibew-parallax-hero">
		{# Background Image with Parallax #}
		<div class="ibew-parallax-bg" style="background-image: url('/themes/custom/ibew_theme/screenshot.jpg');"></div>

		{# Color Overlay #}
		<div class="ibew-parallax-overlay"></div>

		<div class="container relative z-10">
			<h1 class="font-oswald text-5xl md:text-6xl fw-bold text-uppercase mb-4 tracking-wide text-shadow-md">
				{{ 'Contact Us'|t }}
			</h1>
			<p class="text-xl md:text-2xl opacity-90 max-w-2xl mx-auto font-light leading-relaxed">
				{{ "We're here to help. Reach out to IBEW Local 90 for membership inquiries, training information, or any questions you may have."|t }}
			</p>
			<div class="w-24 h-1 bg-yellow-400 mx-auto mt-8 rounded-full"></div>
		</div>
	</section>

	<main>
		<div
			class="ibew-contact-wrapper">
			{# Contact Form Column #}
			<div class="ibew-contact-form-wrapper">
				{{ page.content }}
			</div>

			{# Contact Info Sidebar #}
			<aside
				class="ibew-contact-sidebar">
				{# Office Location Card #}
				<div class="ibew-contact-card">
					<h3>
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewbox="0 0 16 16">
							<path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
						</svg>
						{{ 'Visit Our Office'|t }}
					</h3>

					<div class="ibew-contact-detail">
						<div class="ibew-contact-icon">
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewbox="0 0 16 16">
								<path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
							</svg>
						</div>
						<div class="ibew-contact-text">
							<strong>{{ 'Address'|t }}</strong>
							<span>2 N Plains Industrial Rd<br>Wallingford, CT 06492</span>
						</div>
					</div>

					<div class="ibew-contact-detail">
						<div class="ibew-contact-icon">
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewbox="0 0 16 16">
								<path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.568 17.568 0 0 0 4.168 6.608 17.569 17.569 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.678.678 0 0 0-.58-.122l-2.19.547a1.745 1.745 0 0 1-1.657-.459L5.482 8.062a1.745 1.745 0 0 1-.46-1.657l.548-2.19a.678.678 0 0 0-.122-.58L3.654 1.328z"/>
							</svg>
						</div>
						<div class="ibew-contact-text">
							<strong>{{ 'Phone'|t }}</strong>
							<a href="tel:+12032659533">(203) 265-9533</a>
						</div>
					</div>

					<div class="ibew-contact-detail">
						<div class="ibew-contact-icon">
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewbox="0 0 16 16">
								<path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2zm13 2.383-4.708 2.825L15 11.105V5.383zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741zM1 11.105l4.708-2.897L1 5.383v5.722z"/>
							</svg>
						</div>
						<div class="ibew-contact-text">
							<strong>{{ 'Email'|t }}</strong>
							<a href="mailto:info@ibewlocal90.org">info@ibewlocal90.org</a>
						</div>
					</div>
				</div>

				{# Office Hours Card #}
				<div class="ibew-contact-card">
					<h3>
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewbox="0 0 16 16">
							<path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z"/>
							<path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z"/>
						</svg>
						{{ 'Office Hours'|t }}
					</h3>

					<ul class="ibew-hours-list">
						<li>
							<span class="day">{{ 'Monday - Friday'|t }}</span>
							<span class="time">8:00 AM - 4:30 PM</span>
						</li>
						<li>
							<span class="day">{{ 'Saturday'|t }}</span>
							<span class="time">{{ 'Closed'|t }}</span>
						</li>
						<li>
							<span class="day">{{ 'Sunday'|t }}</span>
							<span class="time">{{ 'Closed'|t }}</span>
						</li>
					</ul>
				</div>

				{# Map Card #}
				<div class="ibew-contact-card">
					<h3>
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewbox="0 0 16 16">
							<path fill-rule="evenodd" d="M15.817.113A.5.5 0 0 1 16 .5v14a.5.5 0 0 1-.402.49l-5 1a.502.502 0 0 1-.196 0L5.5 15.01l-4.902.98A.5.5 0 0 1 0 15.5v-14a.5.5 0 0 1 .402-.49l5-1a.5.5 0 0 1 .196 0L10.5.99l4.902-.98a.5.5 0 0 1 .415.103zM10 1.91l-4-.8v12.98l4 .8V1.91zm1 12.98 4-.8V1.11l-4 .8v12.98zm-6-.8V1.11l-4 .8v12.98l4-.8z"/>
						</svg>
						{{ 'Find Us'|t }}
					</h3>

					<div class="ibew-map-container">
						<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2998.5!2d-72.8428!3d41.4542!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDHCsDI3JzE1LjEiTiA3MsKwNTAnMzQuMSJX!5e0!3m2!1sen!2sus!4v1234567890" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
					</div>
				</div>
			</aside>
		</div>
	</main>

	{# Footer (Reusable Include) #}
	{% include '@ibew_theme/includes/footer.html.twig' %}
</div>
