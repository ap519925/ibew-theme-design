{#
/**
 * @file
 * Theme override to display the login page.
 */
#}
<div
	class="ibew-page bg-ibew-navy-dark min-h-screen d-flex flex-column">

	{# Header Include (Optional: might want a simplified header for login) #}
	{% include '@ibew_theme/includes/header.html.twig' %}

	<main
		role="main" class="flex-grow-1 d-flex flex-column justify-content-center align-items-center py-12 relative">

		{# Background - reuse parallax styles or just simple dark logic #}
		<div class="absolute inset-0 bg-ibew-navy-dark z-0"></div>

		<div
			class="container relative z-10 max-w-lg">
			{# Main Content (The Form) #}
			<div>
				{{ page.content }}
			</div>

			<div class="text-center mt-6">
				<a href="/" class="text-gray-400 hover:text-white text-sm font-medium d-inline-flex align-items-center gap-2 transition-colors">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewbox="0 0 16 16"><path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/></svg>
					{{ 'Back to Website'|t }}
				</a>
			</div>

		</div>
	</main>

	{# Footer - often simplified on login, or full. Let's use full for consistency #}
	{% include '@ibew_theme/includes/footer.html.twig' %}

</div>
