{# page.html.twig - Default template for all standard pages #}
<div class="ibew-page bg-gray-100 text-gray-900 min-h-screen">

	{% include '@ibew_theme/includes/header.html.twig' %}

	{# --- HERO SECTION (Parallax) --- #}
	<section
		class="ibew-parallax-hero relative py-32 overflow-hidden">
		{# Background Image #}
		<div class="ibew-parallax-bg" style="background-image: url('/themes/custom/ibew_theme/screenshot.jpg');"></div>

		{# Overlay #}
		<div class="ibew-parallax-overlay"></div>

		<div
			class="container relative z-10 text-center text-white">
			{# Display Page Title #}
			{% if page.content %}
				{# We assume the title block is within the content region, or we can print title prefix/suffix if needed #}
				<h1 class="font-oswald text-5xl md:text-6xl fw-bold text-uppercase mb-4 tracking-wide text-shadow-md">{{ node.label }}</h1>
			{% else %}
				<h1 class="font-oswald text-5xl md:text-6xl fw-bold text-uppercase mb-4 tracking-wide text-shadow-md">{{ 'IBEW Local 90'|t }}</h1>
			{% endif %}

			<div class="w-24 h-1 bg-yellow-400 mx-auto mt-6 rounded-full"></div>

			{# Optional: Check for a slogan or subtitle field #}
			<p class="text-gray-300 text-lg max-w-3xl mx-auto mt-6">Building comprehensive electrical solutions for Connecticut.</p>
		</div>
	</section>

	{# --- MAIN CONTENT --- #}
	<section class="py-12 bg-white">
		<div class="container ibew-shell max-w-5xl mx-auto">

			<div
				class="row g-5">
				{# Main Content Column #}
				<div
					class="col-lg-8">
					{# Render the main content region #}
					{% if page.content %}
						{{ page.content }}
					{% else %}
						<p class="alert alert-warning">Page content not found.</p>
					{% endif %}
				</div>

				{# Sidebar Column #}
				<div class="col-lg-4">
					<div class="card border-0 shadow-lg bg-ibew-navy text-white h-100">
						<div class="card-body p-8">
							<h3 class="h4 fw-bold mb-4 border-bottom border-gray-600 pb-3">Contact Information</h3>

							<div class="mb-4">
								<div class="d-flex gap-3 mb-3">
									<svg class="text-ibew-gold flex-shrink-0" width="20" height="20" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
										<path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
										<circle cx="12" cy="10" r="3"></circle>
									</svg>
									<div>
										2 North Plains Industrial Road<br>
										Wallingford, CT 06492
									</div>
								</div>
								<div class="d-flex gap-3 mb-3">
									<svg class="text-ibew-gold flex-shrink-0" width="20" height="20" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
										<path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
									</svg>
									<div>
										Phone:
										<a href="tel:203-265-3820" class="text-white text-decoration-none hover:text-ibew-gold">203-265-3820</a>
									</div>
								</div>
								<div class="d-flex gap-3 mb-3">
									<svg class="text-ibew-gold flex-shrink-0" width="20" height="20" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
										<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
										<polyline points="22,6 12,13 2,6"></polyline>
									</svg>
									<div>
										Fax: 203-265-6875
									</div>
								</div>
								<div class="d-flex gap-3">
									<svg class="text-ibew-gold flex-shrink-0" width="20" height="20" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
										<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
										<polyline points="22,6 12,13 2,6"></polyline>
									</svg>
									<div>
										<a href="mailto:info@ibewlocal90.org" class="text-white text-decoration-none hover:text-ibew-gold">info@ibewlocal90.org</a>
									</div>
								</div>
							</div>

							<div class="p-4 bg-white/10 rounded-lg">
								<h4 class="h6 fw-bold text-ibew-gold mb-2">Office Hours</h4>
								<p class="small mb-0">Monday - Friday<br>8:00 AM - 4:30 PM</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	{# --- Footer (Reusable Include) --- #}
	{% include '@ibew_theme/includes/footer.html.twig' %}

</div>
