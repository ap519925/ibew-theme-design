<footer class="ibew-footer">
	<div
		class="ibew-footer__container">
		{# Brand Column #}
		<div class="ibew-footer__brand-col">
			<a href="/" class="ibew-footer__brand-logo">
				<img src="{{ logo }}" alt="IBEW Local 90" loading="lazy">
			</a>
			<p class="ibew-footer__tagline">{{ 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.'|t }}</p>
		</div>

		{# Quick Links Column #}
		<div class="ibew-footer__col">
			<h4 class="ibew-footer__heading">{{ 'Quick Links'|t }}</h4>
			<ul class="ibew-footer__links">
				<li>
					<a href="/about">{{ 'About Us'|t }}</a>
				</li>
				<li>
					<a href="/training">{{ 'Training Programs'|t }}</a>
				</li>
				<li>
					<a href="/join">{{ 'Become a Member'|t }}</a>
				</li>
				<li>
					<a href="/contractors">{{ 'Find a Contractor'|t }}</a>
				</li>
			</ul>
		</div>

		{# Members Column #}
		<div class="ibew-footer__col">
			<h4 class="ibew-footer__heading">{{ 'Members'|t }}</h4>
			<ul class="ibew-footer__links">
				<li>
					<a href="/user/login" class="ibew-footer__highlight">{{ 'Member Portal'|t }}</a>
				</li>
				<li>
					<a href="/dues">{{ 'Pay Dues'|t }}</a>
				</li>
				<li>
					<a href="/benefits">{{ 'Benefits Info'|t }}</a>
				</li>
				<li>
					<a href="/jobs">{{ 'Job Board'|t }}</a>
				</li>
			</ul>
		</div>

		{# Contact Column #}
		<div class="ibew-footer__col ibew-footer__contact">
			<h4 class="ibew-footer__heading ibew-footer__heading--contact">{{ 'Contact'|t }}</h4>
			<div class="ibew-footer__contact-info">
				<div class="ibew-footer__contact-item">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewbox="0 0 16 16">
