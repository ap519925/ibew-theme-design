{# Shared Header for all pages #}

{# Top Utility Bar (Dark) #}
	{% if top_bar_show %}
		<div class="ibew-top-bar" style="background-color: #1f2937; color: white;"> <div class="ibew-shell d-flex justify-content-between align-items-center" style="display: flex; justify-content: space-between; align-items: center; padding: 0.5rem 2rem;">
			<div class="d-flex align-items-center gap-4" style="display: flex; gap: 1rem;">
				{% if top_bar_address %}
					<span class="d-flex align-items-center gap-2" style="display: flex; align-items: center; gap: 0.5rem; font-size: 0.85rem;">
						<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewbox="0 0 16 16"><path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/></svg>
						{{ top_bar_address }}
					</span>
				{% endif %}

				{% if top_bar_phone %}
					<a href="tel:{{ top_bar_phone }}" class="d-flex align-items-center gap-2" style="display: flex; align-items: center; gap: 0.5rem; color: white; text-decoration: none; font-size: 0.85rem;">
						<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewbox="0 0 16 16"><path fill-rule="evenodd" d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z"/></svg>
						{{ top_bar_phone }}
					</a>
				{% endif %}

				{% if top_bar_email %}
					<a href="mailto:{{ top_bar_email }}" class="d-flex align-items-center gap-2" style="display: flex; align-items: center; gap: 0.5rem; color: white; text-decoration: none; font-size: 0.85rem;">
						<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewbox="0 0 16 16"><path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"/></svg>
						{{ top_bar_email }}
					</a>
				{% endif %}
			</div>

			<div class="d-flex align-items-center gap-3" style="display: flex; gap: 1rem; align-items: center;">
				{% if top_bar_join_link %}
					<a href="{{ top_bar_join_link }}" style="color: white; text-decoration: none; font-weight: bold; font-size: 0.9rem;">{{ top_bar_join_text }}</a>
				{% endif %}

				<div style="display: flex; gap: 0.75rem;">
					{% if social_twitter %}
						<a href="{{ social_twitter }}" aria-label="Twitter" style="color: white;" target="_blank">
							<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewbox="0 0 16 16"><path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.99-.052A9.341 9.341 0 0 0 5.026 15z"/></svg>
						</a>
					{% endif %}

					{% if social_linkedin %}
						<a href="{{ social_linkedin }}" aria-label="LinkedIn" style="color: white;" target="_blank">
							<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewbox="0 0 16 16"><path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"/></svg>
						</a>
					{% endif %}

					{% if social_facebook %}
						<a href="{{ social_facebook }}" aria-label="Facebook" style="color: white;" target="_blank">
							<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewbox="0 0 16 16"><path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"/></svg>
						</a>
					{% endif %}

					{% if social_instagram %}
						<a href="{{ social_instagram }}" aria-label="Instagram" style="color: white;" target="_blank">
							<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewbox="0 0 16 16"><path d="M8 0C5.829 0 5.556.01 4.703.048 3.85.088 3.269.222 2.76.42a3.917 3.917 0 0 0-1.417.923A3.927 3.927 0 0 0 .42 2.76C.222 3.268.087 3.85.048 4.7.01 5.555 0 5.827 0 8.001c0 2.172.01 2.444.048 3.297.04.852.174 1.433.372 1.942.205.526.478.972.923 1.417.444.445.89.719 1.416.923.51.198 1.09.333 1.942.372C5.555 15.99 5.827 16 8 16s2.444-.01 3.298-.048c.851-.04 1.434-.174 1.943-.372a3.916 3.916 0 0 0 1.416-.923c.445-.445.718-.891.923-1.417.197-.509.332-1.09.372-1.942C15.99 10.445 16 10.173 16 8s-.01-2.445-.048-3.299c-.04-.851-.175-1.433-.372-1.941a3.926 3.926 0 0 0-.923-1.417A3.911 3.911 0 0 0 13.24.42c-.51-.198-1.092-.333-1.943-.372C10.443.01 10.172 0 7.998 0h.003h-.001ZM8 3.84a4.16 4.16 0 1 0 0 8.32 4.16 4.16 0 0 0 0-8.32Zm0 6.78a2.62 2.62 0 1 1 0-5.24 2.62 2.62 0 0 1 0 5.24Zm6.397-6.994a.96.96 0 1 1-1.92 0 .96.96 0 0 1 1.92 0Z"/></svg>
						</a>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endif %}

{# Main Navigation Bar (Sticky, White) #}
<nav class="ibew-nav">
	<div class="ibew-shell ibew-nav__inner">
		<a href="/" class="ibew-brand">
			<img src="{{ logo }}" alt="IBEW Local 90" class="ibew-brand__logo">
			<div class="ibew-brand__text">
				<span class="ibew-brand__title">{{ 'IBEW LOCAL 90'|t }}</span>
				<span class="ibew-eyebrow">{{ 'IBEW Local 90'|t }}</span>
			</div>
		</a>

		{# Desktop Links - Static to ensure consistency across all pages #}
		<div
			class="flex-grow-1 d-none d-xl-flex justify-content-center">
			{# Dynamic Main Menu (Global) #}
			{% if ibew_main_menu %}
				{{ ibew_main_menu }}
			{% else %}
				<nav class="ibew-nav__links">
					<a href="/">{{ 'Home'|t }}</a>
					<a href="/about">{{ 'About'|t }}</a>
					<a href="/events">{{ 'Events'|t }}</a>
					<a href="/news">{{ 'News'|t }}</a>
					<a href="/contractors">{{ 'Contractors'|t }}</a>
					<a href="/contact">{{ 'Contact'|t }}</a>
				</nav>
			{% endif %}
		</div>

		<div class="d-none d-xl-block">
			<div class="d-flex align-items-center gap-3">
				<a class="ibew-cta ibew-cta--nav" href="/user/login">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewbox="0 0 16 16"><path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/></svg>
					{{ 'Member Sign-In'|t }}
				</a>
				<button class="js-theme-toggle btn btn-link p-2 text-decoration-none rounded-circle text-white hover:text-ibew-gold transition-colors" aria-label="Toggle Theme" style="min-width: 44px; min-height: 44px; border: 1px solid rgba(255,255,255,0.1);">
					<svg class="icon-sun text-warning" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewbox="0 0 24 24" stroke="currentColor" stroke-width="2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
					</svg>
					<svg class="icon-moon text-white d-none" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewbox="0 0 24 24" stroke="currentColor" stroke-width="2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
					</svg>
				</button>
			</div>
		</div>

		{# ========================================
																								   MOBILE HAMBURGER TOGGLE (Inside Nav Bar)
																								   ======================================== #}
		<a href="#nav-mobile" class="nav-mobile__toggle d-xl-none" role="button" aria-expanded="false" aria-controls="nav-mobile-menu">
			<svg class="menuicon" xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewbox="0 0 50 50">
				<title>{{ 'Toggle Menu'|t }}</title>
				<g>
					<line class="menuicon__bar" x1="13" y1="16.5" x2="37" y2="16.5"/>
					<line class="menuicon__bar" x1="13" y1="24.5" x2="37" y2="24.5"/>
					<line class="menuicon__bar" x1="13" y1="24.5" x2="37" y2="24.5"/>
					<line class="menuicon__bar" x1="13" y1="32.5" x2="37" y2="32.5"/>
					<circle class="menuicon__circle" r="23" cx="25" cy="25"/>
				</g>
			</svg>
		</a>
	</div>
</nav>

