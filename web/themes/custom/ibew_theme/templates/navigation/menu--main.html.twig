{#
/**
 * @file
 * Theme override for the Main Menu.
 * Replaces standard UL/LI with flat anchor links for the custom implementation.
 */
#}
{% import _self as menus %}

{{ menus.menu_links(items, attributes, 0) }}

{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {% if items %}
    {# Top Level Wrapper matching fallback structure #}
    {% if menu_level == 0 %}
      <nav class="ibew-nav__links">
    {% endif %}

    {% for item in items %}
      {# Use minimal classes to let theme CSS handle styling #}
      <a href="{{ item.url }}" {{ item.attributes }}>{{ item.title }}</a>
    {% endfor %}

    {% if menu_level == 0 %}
      </nav>
    {% endif %}
  {% endif %}
{% endmacro %}
