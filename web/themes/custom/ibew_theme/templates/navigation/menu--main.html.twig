{#
/**
 * @file
 * Theme override for the Main Menu.
 * Replaces standard UL/LI with flat anchor links for the custom implementation.
 */
#}
{% import _self as menus %}

{{ menus.menu_links(items, attributes, 0) }}

{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {% if items %}
    {# Top Level Wrapper #}
    {% if menu_level == 0 %}
      <nav class="ibew-nav__links d-flex align-items-center">
    {% endif %}

    {% for item in items %}
      {% set classes = [
        'text-decoration-none',
        'fw-bold',
        'small',
        'text-primary',
        'gap-3',
        'px-3',
        item.in_active_trail ? 'active' : '',
      ] %}
      <a href="{{ item.url }}" {{ item.attributes.addClass(classes) }}>{{ item.title }}</a>
    {% endfor %}

    {% if menu_level == 0 %}
      </nav>
    {% endif %}
  {% endif %}
{% endmacro %}
