{#
/**
 * @file
 * Theme implementation for the 'Obituary' content type.
 */
#}
<article{{ attributes.addClass('ibew-obituary-page', 'py-5', 'bg-light') }}>
  <div class="container" style="max-width: 900px;">
    
    <div class="ibew-card bg-white shadow-lg border-0 p-5 rounded-4">
       <div class="row align-items-center mb-5 border-bottom pb-5">
          <div class="col-md-4 text-center">
             {% if content.field_obituary_image %}
               <div class="rounded-circle overflow-hidden shadow-sm d-inline-block border border-4 border-light" style="width: 250px; height: 250px;">
                   {{ content.field_obituary_image }}
               </div>
             {% else %}
               <div class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center border border-4 border-white shadow-sm" style="width: 200px; height: 200px;">
                   <svg class="text-secondary opacity-25" xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" viewBox="0 0 16 16"><path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/></svg>
               </div>
             {% endif %}
          </div>
          <div class="col-md-8 text-center text-md-start mt-4 mt-md-0">
             <div class="text-uppercase tracking-wider text-muted small fw-bold mb-2">In Memoriam</div>
             <h1 class="display-4 font-serif fw-bold text-dark mb-2">{{ label }}</h1>
             
             {% if content.field_life_dates %}
                <div class="h4 text-secondary font-serif fst-italic mb-4">
                   {{ content.field_life_dates }}
                </div>
             {% endif %}
             
             <div class="d-flex gap-3 justify-content-center justify-content-md-start">
               {% if content.field_service_date %}
                  <div class="badge bg-secondary-subtle text-secondary-emphasis rounded-pill px-3 py-2 fs-6 fw-normal">
                     Service: {{ content.field_service_date }}
                  </div>
               {% endif %}
             </div>
          </div>
       </div>

       <div class="row justify-content-center">
         <div class="col-lg-10">
            <div class="ibew-prose lead text-dark font-serif" style="line-height: 1.9;">
               {{ content.body }}
            </div>

            <div class="mt-5 pt-4 border-top">
               <h3 class="h5 font-oswald text-uppercase mb-3 text-muted">Service Details</h3>
               {{ content.field_service_details }}
            </div>
            
            <div class="mt-4">
               {{ content|without('field_obituary_image', 'field_life_dates', 'field_service_date', 'field_service_details', 'body') }}
            </div>
         </div>
       </div>
    </div>
    
    <div class="text-center mt-5">
       <a href="/obituaries" class="text-muted text-decoration-none small hover-underline">Back to Obituaries</a>
    </div>

  </div>
</article>
