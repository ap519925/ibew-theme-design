{#
/**
 * @file
 * Theme implementation for the 'IBEW Event' content type (Full Page).
 */
#}
<article{{attributes.addClass('ibew-event-page')}}>

	{# --- HERO SECTION --- #}
	<section class="relative py-20 overflow-hidden">
		<div class="absolute inset-0 bg-ibew-navy opacity-90 z-0"></div>
		{# Generic Parallax Background #}
		<div class="absolute inset-0 z-0" style="background-image: url('/themes/custom/ibew_theme/screenshot.jpg'); background-attachment: fixed; background-position: center; background-repeat: no-repeat; background-size: cover; mix-blend-mode: overlay; opacity: 0.2;"></div>

		<div class="container relative z-10 text-center text-white">
			<div class="d-inline-flex flex-wrap justify-content-center align-items-center gap-2 text-ibew-gold fw-bold text-uppercase tracking-wider small mb-3">
				<span class="badge bg-white/10 text-white border border-white/20 px-2 py-1">Event</span>
				{% if content.field_event_date %}
					<span>&bull;</span>
					<span>{{ content.field_event_date }}</span>
				{% endif %}
			</div>

			<h1 class="font-oswald text-4xl md:text-5xl fw-bold text-uppercase mb-4 tracking-wide text-white">{{ label }}</h1>

			{% if content.field_event_time %}
				<div class="d-inline-flex align-items-center gap-2 text-gray-300 fs-5">
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewbox="0 0 16 16"><path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z"/><path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z"/></svg>
					{{ content.field_event_time }}
				</div>
			{% endif %}
		</div>
	</section>

	{# --- MAIN CONTENT --- #}
	<section class="py-12 bg-white">
		<div class="container ibew-shell max-w-6xl mx-auto">
			<div class="row g-5">
				<div
					class="col-lg-8">
					{# Featured Image #}
					{% if content.field_event_image %}
						<div class="mb-5 rounded-3 overflow-hidden shadow-sm">
							{{ content.field_event_image }}
						</div>
					{% endif %}

					<div class="ibew-prose lead text-dark mb-5 border-bottom pb-4">
						{{ content.body }}
					</div>

					<div class="ibew-event-details">
						{{ content.field_event_description }}
					</div>
				</div>

				<div class="col-lg-4">
					<div class="card border-0 shadow-lg bg-light h-100 sticky-top" style="top: 100px; z-index: 1;">
						<div class="card-body p-4">
							<h3 class="h4 font-oswald text-uppercase text-ibew-navy mb-4 border-bottom border-warning pb-2">Event Details</h3>

							<ul class="list-unstyled d-flex flex-column gap-3 mb-4">
								{% if content.field_event_date %}
									<li class="d-flex gap-3">
										<div class="bg-white p-2 rounded text-ibew-navy shadow-sm h-100">
											<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewbox="0 0 16 16"><path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/></svg>
										</div>
										<div>
											<strong class="d-block text-dark small text-uppercase">Date</strong>
											<span class="text-secondary">{{ content.field_event_date }}</span>
										</div>
									</li>
								{% endif %}

								{% if content.field_event_time %}
									<li class="d-flex gap-3">
										<div class="bg-white p-2 rounded text-ibew-navy shadow-sm h-100">
											<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewbox="0 0 16 16"><path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z"/><path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z"/></svg>
										</div>
										<div>
											<strong class="d-block text-dark small text-uppercase">Time</strong>
											<span class="text-secondary">{{ content.field_event_time }}</span>
										</div>
									</li>
								{% endif %}

								{% if content.field_event_location %}
									<li class="d-flex gap-3">
										<div class="bg-white p-2 rounded text-ibew-navy shadow-sm h-100">
											<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewbox="0 0 16 16"><path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/></svg>
										</div>
										<div>
											<strong class="d-block text-dark small text-uppercase">Location</strong>
											<span class="text-secondary">{{ content.field_event_location }}</span>
										</div>
									</li>
								{% endif %}
							</ul>

							<div class="d-grid gap-2">
								<a href="#register" class="btn btn-primary fw-bold text-uppercase py-2">Register Now</a>
								<a href="/events" class="btn btn-outline-secondary">Back to Calendar</a>
							</div>

						</div>
					</div>
				</div>
			</div>

			<div class="mt-4">
				{{ content|without('field_event_image', 'field_event_date', 'field_event_time', 'field_event_description', 'field_event_location', 'body') }}
			</div>
		</div>
	</section>
</article>
